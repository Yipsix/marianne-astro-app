---
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png';

const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'kvalifikationer', href: '#kvalifikationer' },
  { label: 'Om firmaet', href: '#firma' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center pr-8">
      <Image 
        src={logoImg} 
        alt="Company Logo Image" 
        class="rounded-lg"
        width={300}
        height={300}
      />
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 text-nowrap text-xl hover:text-primary-500 px-4 transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
    <a href="#Kontakt" class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Kontakt
    </a>
  </div>
</header>
