---
import { FaCheck } from "react-icons/fa";
const metrics = [
  {
    value: "Helbreds-tjek",
    labels: ["Store træer", "Små træer", "Buske", "Risikotræer"],
  },
  { value: "Beskæring", labels: ["Buske", "Frugttræer", "Prydtræer", "Mindre træer", "Store træer"] },
  { value: "Fældning", labels: ["Fra jorden", "Fra toppen"] },
];
---

<section class="bg-gray-100 py-16">
  <div class="container mx-auto px-4">
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-start space-y-12 md:space-y-0"
    >
      {
        metrics.map((metric) => (
          <div class="text-center md:w-1/3">
            <div class="flex items-baseline justify-center">
              <span class="text-4xl font-bold text-green-700">
                {metric.value}
              </span>
            </div>
            {metric.labels.map((label) => (
              <div class="mt-2 text-lg font-semibold max-w-[200px] mx-auto">
                <div class="flex items-center space-x-2">
                  <FaCheck className="text-green-700"/>
                  <p class="text-gray-700">{label}</p>
                </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>
