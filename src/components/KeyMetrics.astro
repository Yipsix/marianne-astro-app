---
import { FaCheck } from "react-icons/fa";
const metrics = [
  {
    value: "Helbreds-tjek",
    labels: ["Store træer", "Små træer", "Buske", "Risikotræer"],
  },
  { value: "Beskæring", labels: ["Buske", "Frugttræer", "Prydtræer", "Mindre træer", "Store træer"] },
  { value: "Fældning", labels: ["Fra jorden", "Fra toppen"] },
];
---

<section class="bg-gray-100 py-16" id="services">
  <div class="mx-auto container px-4 justify-center items-center flex flex-row">
    <div class="flex flex-col md:flex-row justify-between text-center space-y-8 md:space-y-0 md:space-x-8 content-center">
      {
        metrics.map((metric) => (
          <div class="px-16">
            <div class="flex">
              <span class="text-4xl py-4 font-bold text-green-700 text-nowrap">
                {metric.value}
              </span>
            </div>
            {metric.labels.map((label) => (
              <div class="mt-2 text-lg font-semibold max-w-[200px]">
                <div class="flex items-center space-x-2">
                  <FaCheck className="text-green-700"/>
                  <p class="text-gray-700">{label}</p>
                </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>
